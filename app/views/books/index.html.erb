<h2>Books</h2>

<% @books.each do |book| %>
<h3><%= book.title %></h3>
<p><%= book.created_at %></p>
<%= link_to "show", book_path(book) %>
<%= link_to "edit", edit_book_path(book) %>
<%= link_to "destroy", book_path(book), method: :delete %>
<% end %>

<!-- 投稿画面 -->
<h2>New book</h2>

<%= form_for(@book) do |f| %>

    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %>

<% end %>


