<p id="notice">
 <%=  notice %>
</p>


<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book) %>
				<%= link_to "edit", edit_book_path(book) %>
				<%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>



<!-- 投稿画面 -->
<h3>New book</h3>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    <%= f.label :title %><br>
    <%= f.text_field :title %>

    <br><%= f.label :Body %><br>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %>

<% end %>

